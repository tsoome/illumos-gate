export LC_ALL=C.UTF-8

test_dir="/var/tmp/du_dir"
typeset -i fail=0

function require_sparse_file_support
{
	typeset MIN_HOLE_SIZE=$(getconf MIN_HOLE_SIZE $test_dir)

	if [[ MIN_HOLE_SIZE == "undefined" ]]; then
		echo "getconf MIN_HOLE_SIZE $(pwd) failed; sparse files "
		    "probably not supported by file system"
		((fail++))
	fi
}
