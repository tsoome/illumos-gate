PROG=	vtfontcvt
OBJS=	vtfontcvt.o

LZ4=	$(SRC)/common/lz4
# The in-gate lz4 headers must take precedence over any that may appear in an
# adjunct.
CPPFLAGS.first +=	-I$(LZ4)
LZ4_OBJS=	lz4.o
OBJS	+=	$(LZ4_OBJS)

LDLIBS += -lumem

%.o:	$(LZ4)/%.c
	$(COMPILE.c) $<
	$(POST_PROCESS_O)
